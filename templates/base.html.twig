<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            {#$this->addFlash('success','Category successfully created');#}
            {#TYPE used below is the first parameter of above#}
            {#MESSAGES is the value#}
            {% for type,messages in app.session.flashbag.all %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        <strong>{{ type|capitalize }}!</strong> {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% block body %}


        {% endblock %}
        </div>
        {% block javascripts %}
            
        {% endblock %}
    </body>
</html>
